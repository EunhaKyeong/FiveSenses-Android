<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TimelineFragment">

    <RadioGroup
        android:id="@+id/timeline_filter_rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20.5dp"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/timeline_latest_order_rb"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_filter_rb"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/title_latest_order"
            android:textAppearance="@style/Sub_Head_B_16"
            android:textColor="@color/WH" />

        <RadioButton
            android:id="@+id/timeline_old_fashioned_rb"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_filter_rb"
            android:button="@null"
            android:gravity="center"
            android:text="@string/title_old_fashioned"
            android:textAppearance="@style/Sub_Head_B_16"
            android:textColor="@color/WH" />
    </RadioGroup>

    <TextView
        android:id="@+id/timeline_total_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textAppearance="@style/Sub_Head_B_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeline_filter_rg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeline_record_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingHorizontal="20dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeline_total_cnt_tv"
        tools:listitem="@layout/item_record_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>