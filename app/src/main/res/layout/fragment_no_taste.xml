<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NoTasteFragment">

    <FrameLayout
        android:id="@+id/no_taste_filter_fl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingStart="21dp"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/no_taste_timeline_filter_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/no_taste_latest_order_rb"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/title_latest_order"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

            <RadioButton
                android:id="@+id/no_taste_old_fashioned_rb"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:gravity="center"
                android:text="@string/title_old_fashioned"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

        </RadioGroup>

        <HorizontalScrollView
            android:id="@+id/no_taste_sense_hsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="invisible">

            <RadioGroup
                android:id="@+id/no_taste_sense_filter_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/no_taste_sight_rb"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/title_sight"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

                <RadioButton
                    android:id="@+id/no_taste_ear_rb"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/title_ear"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

                <RadioButton
                    android:id="@+id/no_taste_smell_rb"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/title_smell"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

                <RadioButton
                    android:id="@+id/no_taste_taste_rb"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/title_taste"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

                <RadioButton
                    android:id="@+id/no_taste_touch_rb"
                    android:layout_width="57dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/title_touch"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

                <RadioButton
                    android:id="@+id/no_taste_question_rb"
                    android:layout_width="98dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_filter_rb"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/title_question"
                    android:textAppearance="@style/Sub_Head_B_16"
                    android:textColor="@color/WH" />

            </RadioGroup>

        </HorizontalScrollView>

        <RadioGroup
            android:id="@+id/no_taste_score_filter_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <RadioButton
                android:id="@+id/no_taste_5_score_rb"
                android:layout_width="58dp"
                android:layout_height="36dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/title_5_score"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

            <RadioButton
                android:id="@+id/no_taste_4_score_rb"
                android:layout_width="58dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:gravity="center"
                android:text="@string/title_4_score"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

            <RadioButton
                android:id="@+id/no_taste_3_score_rb"
                android:layout_width="58dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:gravity="center"
                android:text="@string/title_3_score"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

            <RadioButton
                android:id="@+id/no_taste_2_score_rb"
                android:layout_width="57dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:gravity="center"
                android:text="@string/title_2_score"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />

            <RadioButton
                android:id="@+id/no_taste_1_score_rb"
                android:layout_width="57dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/selector_filter_rb"
                android:button="@null"
                android:gravity="center"
                android:text="@string/title_1_score"
                android:textAppearance="@style/Sub_Head_B_16"
                android:textColor="@color/WH" />
        </RadioGroup>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_taste_calendar_cl"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="@drawable/bg_wh_bottom30"
        android:elevation="15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/no_taste_left_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_left_arrow_44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/no_taste_year_month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/GY_04"
            app:layout_constraintBottom_toBottomOf="@+id/no_taste_left_arrow_iv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_left_arrow_iv"
            app:layout_constraintTop_toTopOf="@+id/no_taste_left_arrow_iv" />

        <ImageView
            android:id="@+id/no_taste_right_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow_44"
            app:layout_constraintBottom_toBottomOf="@+id/no_taste_left_arrow_iv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_year_month_tv"
            app:layout_constraintTop_toTopOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_sun_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_sunday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_mon_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_mon_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_monday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_tue_tv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_sun_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_tue_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_tuesday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_wed_tv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_mon_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_wed_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_wednesday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_thu_tv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_tue_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_thu_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_thursday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_fri_tv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_wed_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_fri_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/title_friday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_sat_tv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_thu_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <TextView
            android:id="@+id/no_taste_sat_tv"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="14dp"
            android:gravity="center"
            android:text="@string/title_saturday"
            android:textAppearance="@style/Body1_M_14"
            android:textColor="@color/GY_03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/no_taste_fri_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_left_arrow_iv" />

        <com.kizitonwose.calendarview.CalendarView
            android:id="@+id/no_taste_cv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            app:cv_dayViewResource="@layout/calendar_day_layout"
            app:cv_hasBoundaries="false"
            app:cv_inDateStyle="allMonths"
            app:cv_maxRowCount="1"
            app:cv_orientation="horizontal"
            app:cv_outDateStyle="endOfRow"
            app:cv_scrollMode="paged"
            app:layout_constraintBottom_toTopOf="@+id/no_taste_arrow_touch_view"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_sun_tv" />

        <ImageView
            android:id="@+id/no_taste_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_expand_46"
            android:tag="expand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/no_taste_arrow_touch_view"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_taste_try_cl"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_gy01_10"
        app:layout_constraintTop_toBottomOf="@+id/no_taste_filter_fl">

        <TextView
            android:id="@+id/no_taste_try_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textAppearance="@style/Head_B_20"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/no_taste_sight_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13.5dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/ic_sight_character_circle_78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_try_tv" />

        <TextView
            android:id="@+id/no_taste_sight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/title_sight"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/RD_3"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_sight_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_sight_iv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_sight_iv" />

        <ImageView
            android:id="@+id/no_taste_ear_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:src="@drawable/ic_ear_character_circle_78"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_smell_iv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_sight_iv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_try_tv" />

        <TextView
            android:id="@+id/no_taste_ear_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/title_ear"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/BU_3"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_ear_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_ear_iv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_ear_iv" />

        <ImageView
            android:id="@+id/no_taste_smell_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="13.5dp"
            android:src="@drawable/ic_smell_character_circle_78"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_try_tv" />

        <TextView
            android:id="@+id/no_taste_smell_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/title_smell"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/GN_3"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_smell_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_smell_iv"
            app:layout_constraintTop_toBottomOf="@+id/no_taste_smell_iv" />

        <ImageView
            android:id="@+id/no_taste_taste_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13.5dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_taste_character_circle_78"
            app:layout_constraintBottom_toTopOf="@+id/no_taste_taste_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/no_taste_taste_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="@string/title_taste"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/YE_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_taste_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_taste_iv" />

        <ImageView
            android:id="@+id/no_taste_touch_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_touch_character_circle_78"
            app:layout_constraintBottom_toTopOf="@+id/no_taste_taste_tv"
            app:layout_constraintEnd_toStartOf="@+id/no_taste_question_iv"
            app:layout_constraintStart_toEndOf="@+id/no_taste_taste_iv" />

        <TextView
            android:id="@+id/no_taste_touch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="@string/title_touch"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/PU_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_touch_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_touch_iv" />

        <ImageView
            android:id="@+id/no_taste_question_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13.5dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_question_character_circle_78"
            app:layout_constraintBottom_toTopOf="@+id/no_taste_question_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/no_taste_question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="@string/title_question"
            android:textAppearance="@style/Sub_Head_B_18"
            android:textColor="@color/GY_04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/no_taste_question_iv"
            app:layout_constraintStart_toStartOf="@+id/no_taste_question_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no_taste_how_to_use_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="61dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_bk_22p5"
        android:text="@string/msg_how_to_use"
        android:textAppearance="@style/Sub_Head_B_18"
        android:textColor="@color/WH"
        app:layout_constraintTop_toBottomOf="@+id/no_taste_try_cl" />

</androidx.constraintlayout.widget.ConstraintLayout>